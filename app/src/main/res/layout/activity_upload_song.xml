<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".UploadSong">

    <TextView
        android:id="@+id/tv_SonglyUS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/songly"
        android:textColor="#F4366C"
        android:textSize="60sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btn_selectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="SELECT FILE"
            android:onClick="selectAudioFile"/>

        <TextView
            android:id="@+id/tv_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="No file selected"/>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_UploadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="UPLOAD"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="uploadFileToFirebase"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_new_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            style="bold"/>

        <TextView
            android:id="@+id/tv_new_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="album"
            style="bold"/>

        <TextView
            android:id="@+id/tv_new_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="artist"
            style="bold"/>

        <TextView
            android:id="@+id/tv_new_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="data"
            style="bold"/>

        <TextView
            android:id="@+id/tv_new_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="duration"
            style="bold"/>

        <ImageView
            android:id="@+id/iv_new_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_us_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#808080"
        android:gravity="center"
        android:text="BACK TO HOME"/>

</LinearLayout>